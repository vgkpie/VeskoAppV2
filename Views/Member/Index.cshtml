@model List<VeskoAppV2.Models.Workouts>

@{
    ViewData["Title"] = "Your Workouts";
}

<div class="container mt-5">
    <div class="jumbotron text-center bg-success text-white p-5 rounded">
        <h1 class="display-4">Welcome Back!</h1>
        <p class="lead">Here are your upcoming workouts with your trainers.</p>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped table-hover mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>Trainer</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var workout in Model)
                {
                    <tr>
                        <td>@workout.Trainer?.FirstName @workout.Trainer?.FamilyName</td>
                        <td>@workout.StartsAtStation.ToString("g")</td>
                        <td>@workout.ArrivesAtDestination.ToString("g")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center mt-4">You have no workouts scheduled. <a href="/Training/Index">Find workouts now!</a></p>
    }
</div>
